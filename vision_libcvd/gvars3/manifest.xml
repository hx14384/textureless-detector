<package>
  <description brief="gvars3">

     Wrapper to install gvars3 libraries

  </description>
  <author>Georg Klein, Ed Rosten and others. ROS wrapper package by Andrew Gee.</author>
  <license>LGPL</license>
  <review status="unreviewed" notes=""/>
  <url>http://www.edwardrosten.com/cvd/gvars3.html</url>
  
  <depend package="TooN"/>
  
  <rosdep name="readline"/>
  <rosdep name="fltk"/>
  
  <export>
    <cpp cflags="-I${prefix}/include/" lflags="-L${prefix}/lib/ -Wl,-rpath,${prefix}/lib/ -lGVars3 -lGVars3_headless" />
  </export>

</package>


